<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<input name="buscador">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render 'post', post: post %>
    <% end %>
  </tbody>
</table>

<br>
<script>
  $(document).ready(function(){
    $("[name='buscador']").on("input", function(){
      var x = $(this).val();
      $.ajax({
        url: '<%= posts_path %>',
        type: 'GET',
        dataType: 'script',
        data: {search: x},
      });
    });
  });
</script>

<%= link_to 'New Post', new_post_path %>
